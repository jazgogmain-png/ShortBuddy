<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#0F0F0F">

    <ViewFlipper
        android:id="@+id/tabFlipper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="[NEURAL_CAPTION_DATA]" android:textColor="#00FF41" android:textSize="10sp" android:fontFamily="monospace"/>
            <EditText android:id="@+id/etTabCaption" android:layout_width="match_parent" android:layout_height="wrap_content" android:minLines="3" android:gravity="top" android:textColor="#FFFFFF" android:backgroundTint="#333333" android:layout_marginTop="8dp" android:fontFamily="monospace" android:textSize="13sp"/>
            <Button android:id="@+id/btnRegenCaption" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="REGENERATE" android:textSize="10sp" android:layout_marginTop="12dp" android:backgroundTint="#1A1A1A" android:textColor="#00FF41"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="[HOOK_SUGGESTION]" android:textColor="#00FF41" android:textSize="10sp" android:fontFamily="monospace"/>
            <EditText android:id="@+id/etTabOverlay" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#FFFFFF" android:backgroundTint="#333333" android:layout_marginTop="8dp" android:fontFamily="monospace"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="RECOMMENDED STYLE: BOLD / YELLOW / CENTER" android:textColor="#444444" android:textSize="9sp" android:layout_marginTop="16dp" android:fontFamily="monospace"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="[HASHTAG_STACK]" android:textColor="#00FF41" android:textSize="10sp" android:fontFamily="monospace"/>
            <EditText android:id="@+id/etTabHashtags" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#00FF41" android:backgroundTint="#333333" android:layout_marginTop="8dp" android:fontFamily="monospace"/>
            <Button android:id="@+id/btnOptimizeTags" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="OPTIMIZE FOR ALGORITHM" android:layout_marginTop="12dp" android:backgroundTint="#00FF41" android:textColor="#000000" android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="[SEO_HIDDEN_TAGS]" android:textColor="#00FF41" android:textSize="10sp" android:fontFamily="monospace"/>
            <EditText android:id="@+id/etTabTags" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#888888" android:backgroundTint="#333333" android:layout_marginTop="8dp" android:fontFamily="monospace"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center">
            <TextView android:id="@+id/tvMusicSuggestion"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="ðŸŽµ SUGGESTED: SOFT AMBIENT LOFI"
                android:textColor="#00FF41"
                android:fontFamily="monospace"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SEARCH TRENDING" android:layout_marginTop="12dp" android:backgroundTint="#1A1A1A" android:textColor="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="[VEO_SOURCE_PROMPT]" android:textColor="#00FF41" android:textSize="10sp" android:fontFamily="monospace"/>
            <EditText android:id="@+id/etTabPrompt" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#BBBBBB" android:backgroundTint="#333333" android:textSize="11sp" android:fontFamily="monospace" android:layout_marginTop="8dp"/>
            <Button android:id="@+id/btnCopyPrompt" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="COPY TO CLIPBOARD" android:layout_marginTop="12dp" android:backgroundTint="#00FF41" android:textColor="#000000" android:textStyle="bold"/>
        </LinearLayout>

    </ViewFlipper>

    <Button
        android:id="@+id/btnNextToReview"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="PROCEED TO REVIEW â†’"
        android:backgroundTint="#00FF41"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="12dp" />

</LinearLayout>