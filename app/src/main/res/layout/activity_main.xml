<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A">

    <com.google.android.material.navigationrail.NavigationRailView
        android:id="@+id/navigationRail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#121212"
        app:itemIconTint="#00FF41"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/lane_menu" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/navigationRail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#000000"
                app:cardCornerRadius="4dp">
                <ScrollView android:id="@+id/svNerdWindow" android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView android:id="@+id/tvNerdLog" android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:textColor="#00FF41" android:textSize="10sp" android:fontFamily="monospace" android:text="[READY]" />
                </ScrollView>
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/btnOpenSettings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_manage"
                app:tint="#00FF41" />
        </LinearLayout>

        <ViewFlipper
            android:id="@+id/workflowFlipper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center">
                <Button android:id="@+id/btnNewProject" android:layout_width="200dp" android:layout_height="200dp"
                    android:text="[ + ]\nNEW PROJECT" android:backgroundTint="#1A1A1A" android:textColor="#00FF41" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center">
                <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateTint="#00FF41" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="G3 IS WATCHING..." android:textColor="#00FF41" android:layout_marginTop="16dp" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

                <FrameLayout android:layout_width="match_parent" android:layout_height="350dp" android:background="#000000">
                    <androidx.media3.ui.PlayerView android:id="@+id/playerView" android:layout_width="match_parent" android:layout_height="match_parent" app:use_controller="false" app:resize_mode="zoom" />
                    <TextView android:id="@+id/tvViralOverlay" android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_gravity="center" android:gravity="center" android:padding="20dp" android:textColor="#FFFFFF" android:textSize="24sp" android:textStyle="bold" android:shadowColor="#000000" android:shadowDx="2" android:shadowDy="2" android:shadowRadius="4" />
                </FrameLayout>

                <EditText android:id="@+id/etTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:textColor="#FFFFFF" android:hint="Edit Title..." android:backgroundTint="#333333" />

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="8dp">
                    <EditText android:id="@+id/etHashtags" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#00FF41" android:hint="Hashtags..." android:backgroundTint="#333333" />

                    <Button android:id="@+id/btnCopyVeo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="VEO" android:backgroundTint="#1A1A1A" android:textColor="#00FF41" android:textSize="12sp" android:layout_marginStart="8dp" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" />

                <Button android:id="@+id/btnSwoosh" android:layout_width="match_parent" android:layout_height="60dp" android:text="SWOOSH TO YOUTUBE" android:backgroundTint="#00FF41" android:textColor="#000000" android:textStyle="bold" android:layout_marginBottom="8dp" />
            </LinearLayout>

        </ViewFlipper>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>