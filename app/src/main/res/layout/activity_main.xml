<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A">

    <com.google.android.material.navigationrail.NavigationRailView
        android:id="@+id/navigationRail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#121212"
        app:headerLayout="@layout/rail_header"
        app:itemIconTint="#00FF41"
        app:itemTextColor="#888888"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/lane_menu" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/navigationRail">

        <TextView
            android:id="@+id/currentLaneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Lane: Cuteness Overload ðŸ¾"
            android:textColor="#00FF41"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/dropZone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ã‚¿ãƒƒãƒ—ã—ã¦å‹•ç”»ã‚’å–ã‚Šè¾¼ã‚€\n(TAP TO INGEST VIDEO)"
                    android:textAlignment="center"
                    android:textColor="#444444"
                    android:textSize="16sp" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDraft"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:backgroundTint="#00FF41"
                android:text="SWOOSH TO DRAFTS"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSchedule"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:backgroundTint="#222222"
                android:text="NINJA SCHEDULE"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>