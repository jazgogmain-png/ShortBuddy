<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505">

    <com.google.android.material.navigationrail.NavigationRailView
        android:id="@+id/navigationRail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#0A0A0A"
        app:itemIconTint="#00FF41"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/lane_menu" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/navigationRail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#000000"
                app:cardCornerRadius="4dp">
                <TextView android:id="@+id/tvNerdLog" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:padding="10dp" android:textColor="#00FF41" android:textSize="9sp" android:fontFamily="monospace"
                    android:text="[NEURAL_ENGINE_READY]" />
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/btnOpenSettings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_manage"
                app:tint="#00FF41" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnMuteToggle"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="[ MUTE ]"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:backgroundTint="#121212"
                android:textColor="#00FF41"
                android:padding="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="AUDIO_PHASE: ACTIVE"
                android:textColor="#333333"
                android:textSize="9sp"
                android:fontFamily="monospace"/>
        </LinearLayout>

        <ViewFlipper
            android:id="@+id/workflowFlipper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
                <Button android:id="@+id/btnNewProject" android:layout_width="match_parent" android:layout_height="80dp"
                    android:text="[ + ] NEW PROJECT" android:backgroundTint="#121212" android:textColor="#00FF41" android:fontFamily="monospace" />
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvRecentProjects" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="12dp" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center" />

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
                <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="250dp" app:cardBackgroundColor="#000000">
                    <androidx.media3.ui.PlayerView android:id="@+id/analyzePlayerView" android:layout_width="match_parent" android:layout_height="match_parent" app:use_controller="false" />
                </androidx.cardview.widget.CardView>
                <TextView android:id="@+id/tvAnalyzePanel" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#00FF41" android:padding="12dp" android:fontFamily="monospace" android:text="SCANNING..." />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
                <com.google.android.material.tabs.TabLayout android:id="@+id/generateTabs" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:background="#050505" app:tabTextColor="#444444" app:tabSelectedTextColor="#00FF41" app:tabIndicatorColor="#00FF41" />
                <FrameLayout android:id="@+id/generateContentFrame" android:layout_width="match_parent" android:layout_height="match_parent" />
            </LinearLayout>

            <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="300dp" app:cardBackgroundColor="#000000">
                        <androidx.media3.ui.PlayerView android:id="@+id/reviewPlayerView" android:layout_width="match_parent" android:layout_height="match_parent" app:use_controller="false" />
                    </androidx.cardview.widget.CardView>
                    <EditText android:id="@+id/etFinalCaption" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Final Caption" android:textColor="#FFFFFF" android:layout_marginTop="12dp" android:backgroundTint="#333333" />
                    <EditText android:id="@+id/etFinalTags" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Final Hashtags" android:textColor="#00FF41" android:layout_marginTop="8dp" android:backgroundTint="#333333" />
                    <Button android:id="@+id/btnProceedToPublish" android:layout_width="match_parent" android:layout_height="60dp" android:text="GO TO PUBLISH â†’" android:layout_marginTop="20dp" android:backgroundTint="#1A1A1A" android:textColor="#00FF41" />
                </LinearLayout>
            </ScrollView>

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center_horizontal">
                <Button android:id="@+id/btnSwoosh" android:layout_width="match_parent" android:layout_height="60dp" android:text="POST_NOW" android:backgroundTint="#00FF41" android:textColor="#000000" />
            </LinearLayout>

        </ViewFlipper>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>