<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505">

    <com.google.android.material.navigationrail.NavigationRailView
        android:id="@+id/navigationRail"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:background="#0A0A0A"
        app:itemIconTint="#00FF41"
        app:itemTextColor="#444444"
        app:headerLayout="@layout/rail_header"
        app:menuGravity="top"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/lane_menu" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/navigationRail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#000000"
                app:cardCornerRadius="4dp">
                <TextView android:id="@+id/tvNerdLog" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:padding="10dp" android:textColor="#00FF41" android:textSize="9sp" android:fontFamily="monospace"
                    android:text="[NEURAL_ENGINE_READY]" />
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/btnOpenSettings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_manage"
                app:tint="#00FF41" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnMuteToggle"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="[ MUTE ]"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:backgroundTint="#121212"
                android:textColor="#00FF41"
                android:padding="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="AUDIO_PHASE: ACTIVE"
                android:textColor="#333333"
                android:textSize="9sp"
                android:fontFamily="monospace"/>
        </LinearLayout>

        <ViewFlipper
            android:id="@+id/workflowFlipper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button android:id="@+id/btnNewProject"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="2"
                        android:text="[ + ] NEW PROJECT"
                        android:backgroundTint="#121212"
                        android:textColor="#00FF41"
                        android:fontFamily="monospace" />

                    <Button android:id="@+id/btnResetManual"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="[ RESET ]"
                        android:backgroundTint="#1A1111"
                        android:textColor="#FF4444"
                        android:fontFamily="monospace" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvRecentProjects" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="12dp" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center" />

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    app:cardBackgroundColor="#000000"
                    app:cardElevation="0dp">
                    <androidx.media3.ui.PlayerView
                        android:id="@+id/analyzePlayerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:use_controller="false"
                        app:resize_mode="zoom" />
                </androidx.cardview.widget.CardView>
                <TextView android:id="@+id/tvAnalyzePanel" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#00FF41" android:padding="12dp" android:fontFamily="monospace" android:text="SCANNING..." />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
                <com.google.android.material.tabs.TabLayout android:id="@+id/generateTabs" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:background="#050505" app:tabTextColor="#444444" app:tabSelectedTextColor="#00FF41" app:tabIndicatorColor="#00FF41" />
                <FrameLayout android:id="@+id/generateContentFrame" android:layout_width="match_parent" android:layout_height="match_parent" />
            </LinearLayout>

            <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        app:cardBackgroundColor="#000000">
                        <androidx.media3.ui.PlayerView
                            android:id="@+id/reviewPlayerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:use_controller="false"
                            app:resize_mode="zoom" />
                    </androidx.cardview.widget.CardView>
                    <EditText android:id="@+id/etFinalCaption" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Final Caption" android:textColor="#FFFFFF" android:layout_marginTop="12dp" android:backgroundTint="#333333" />
                    <EditText android:id="@+id/etFinalTags" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Final Hashtags" android:textColor="#00FF41" android:layout_marginTop="8dp" android:backgroundTint="#333333" />
                    <Button android:id="@+id/btnProceedToPublish" android:layout_width="match_parent" android:layout_height="60dp" android:text="GO TO PUBLISH â†’" android:layout_marginTop="20dp" android:backgroundTint="#1A1A1A" android:textColor="#00FF41" />
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#0F0F0F"
                    app:cardCornerRadius="8dp"
                    android:layout_marginBottom="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="AI_VEO_STRATEGY" android:textColor="#444444" android:textSize="10sp" android:fontFamily="monospace"/>

                            <Button android:id="@+id/btnScanAnalytics"
                                android:layout_width="wrap_content" android:layout_height="28dp"
                                android:layout_alignParentEnd="true"
                                android:text="[ SCAN ANALYTICS ]" android:textSize="8sp"
                                android:backgroundTint="#1A1A1A" android:textColor="#00FF41"
                                android:padding="0dp" android:fontFamily="monospace"/>
                        </RelativeLayout>

                        <TextView android:id="@+id/tvBestTime"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="Best time today: 08:00 ðŸŸ¢"
                            android:textColor="#00FF41"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="monospace"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="SELECT_SCHEDULE_SLOT" android:textColor="#444444" android:textSize="10sp" android:fontFamily="monospace" android:layout_marginBottom="8dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginBottom="24dp">

                    <Button android:id="@+id/btnSlot1" android:layout_width="0dp" android:layout_height="50dp" android:layout_columnWeight="1" android:layout_margin="4dp"
                        android:text="08:00" android:backgroundTint="#121212" android:textColor="#FFFFFF" android:textSize="12sp" android:fontFamily="monospace"/>
                    <Button android:id="@+id/btnSlot2" android:layout_width="0dp" android:layout_height="50dp" android:layout_columnWeight="1" android:layout_margin="4dp"
                        android:text="11:00" android:backgroundTint="#121212" android:textColor="#FFFFFF" android:textSize="12sp" android:fontFamily="monospace"/>
                    <Button android:id="@+id/btnSlot3" android:layout_width="0dp" android:layout_height="50dp" android:layout_columnWeight="1" android:layout_margin="4dp"
                        android:text="16:00" android:backgroundTint="#121212" android:textColor="#FFFFFF" android:textSize="12sp" android:fontFamily="monospace"/>
                    <Button android:id="@+id/btnSlot4" android:layout_width="0dp" android:layout_height="50dp" android:layout_columnWeight="1" android:layout_margin="4dp"
                        android:text="18:00" android:backgroundTint="#121212" android:textColor="#FFFFFF" android:textSize="12sp" android:fontFamily="monospace"/>
                </GridLayout>

                <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>

                <Button
                    android:id="@+id/btnSwoosh"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="SWOOSH: POST NOW"
                    android:backgroundTint="#00FF41" android:textColor="#000000"
                    android:textStyle="bold" android:fontFamily="monospace" />

            </LinearLayout>

        </ViewFlipper>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>