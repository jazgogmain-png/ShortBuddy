<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENGINE ROOM: TEMPLATES"
        android:textColor="#00FF41"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="monospace"/>

    <View
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:background="#00FF41"
        android:layout_marginTop="4dp"/>

    Full Ninja) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="AUTOMATION LEVEL"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderAutomation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:thumbColor="#00FF41"
        app:trackColorActive="#00FF41"
        app:trackColorInactive="#333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Manual" android:textColor="#888888" android:textSize="10sp" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Full Ninja" android:textColor="#888888" android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="G3 MASTER SYSTEM PROMPT"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#1A1A1A"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <EditText
            android:id="@+id/etMasterPrompt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="#BBBBBB"
            android:textSize="13sp"
            android:fontFamily="monospace"
            android:hint="Paste your G3 Master System Instructions here..."
            android:textColorHint="#444444"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="STATIC TAG STACK (Always Included)"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etStaticTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#333333"
        android:hint="#shorts #viralshorts #aibaby"
        android:textColor="#00FF41"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnSaveSettings"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#00FF41"
        android:text="ENGAGE ENGINE"
        android:textColor="#000000"
        android:textStyle="bold" />

</LinearLayout>